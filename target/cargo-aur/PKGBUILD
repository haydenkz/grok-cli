pkgname=grok-cli
pkgver=1.0.0
pkgrel=1
pkgdesc="Grok in the terminal"
url="https://github.com/haydenzeller/grok-cli"
license=("mit")
arch=("x86_64")
provides=("grok-cli")
conflicts=("grok-cli")
source=("https://github.com/haydenzeller/grok-cli/releases/download/v$pkgver/grok-cli-$pkgver-x86_64.tar.gz")
sha256sums=("26c36153923d19d76fb155f79d0b1304f38cd1322ba1b488d6fa89f923156a15")

package() {
    install -Dm755 grok -t "$pkgdir/usr/bin"
    install -Dm644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
    install -Dm644 "config.template" "$pkgdir/etc/grok/config"
}
